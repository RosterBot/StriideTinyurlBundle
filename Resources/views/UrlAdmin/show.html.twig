{% extends "StriideTinyurlBundle::layout.html.twig" %}

{% block striide_tinyurl_content %}

<h1>Url Show</h1>

<table class="table table-condensed table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Short</th>
      <td>{{ entity.short }}</td>
    </tr>
    <tr>
      <th>URI</th>
      <td>{{ entity.uri }}</td>
    </tr>
    <tr>
      <th>Clicks</th>
      <td>{{ entity.clicks }}</td>
    </tr>
    <tr>
      <th>Created</th>
      <td>{{ entity.createdAt|date('Y-m-d') }}</td>
    </tr>
  </tbody>
</table>

<p>
  {#
  <a class="btn" href="{{ path('StriideTinyurlBundle_admin_url_index') }}">Back to list</a>
  #}
</p>

{% endblock striide_tinyurl_content %}
